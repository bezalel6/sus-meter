{
  "name": "sus-o-meter",
  "version": "1.5.0",
  "description": "Chess profile analyzer for Lichess and Chess.com. Instantly analyze player profiles, check account age, stats, and spot suspicious patterns to protect your games and streams from potential cheaters.",
  "scripts": {
    "dev": "webpack --watch --mode development",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "zip": "node scripts/zip-dist.js",
    "package": "npm run build && npm run zip",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "keywords": [
    "chrome-extension",
    "typescript",
    "manifest-v3"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "archiver": "^7.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "mini-css-extract-plugin": "^2.7.7",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "sharp": "^0.34.5",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  }
}
