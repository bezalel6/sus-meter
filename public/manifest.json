{
  "manifest_version": 3,
  "name": "Sus Meter - Chess Profile Analyzer",
  "version": "1.4.2069",
  "description": "Analyze chess profiles on lichess.org and chess.com to identify suspicious accounts and help streamers detect potential cheaters",
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
    "*://lichess.org/*",
    "*://www.lichess.org/*",
    "*://chess.com/*",
    "*://www.chess.com/*",
    "*://api.chess.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://lichess.org/*",
        "*://www.lichess.org/*"
      ],
      "js": [
        "content-lichess.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://chess.com/*",
        "*://www.chess.com/*"
      ],
      "js": [
        "content-chess-com.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}